<%- include('../partials/head') %>
<link rel="stylesheet" href="/css/login.css" />
<title>Inicia sesión</title>
</head>

<body>
  <%- include('../partials/header') %>

  <main class="containerMainLogin">
    <div class="containerRegistroLogin">
      <form action="/login" method="POST" class="login">
        <label for="email">Correo Electrónico:</label>
        <input type="email" class="control <%= locals.errors? 'is-invalid' : null %>" id="email" name="email" value="<%= locals.oldData ? locals.oldData : null %>" required />

        <label for="password">Contraseña:</label>
        <input type="password" class="control <%= locals.errors? 'is-invalid' : null %>" id="password" name="password" required />

        <% if(locals.errors){ %>
        <div class="text-danger">
          <%= errors.password.msg  %>
        </div>
        <% } %>

        <% if(locals.oldData){ %>
        <%= console.log(locals.oldData)  %>
        <% } %>

        <label for="remember" class="remember-me">
          <input type="checkbox" name="remember"> Recuérdame
        </label>

        <button type="submit" class="login-btn">Iniciar Sesión</button>
      </form>
    </div>
  </main>

  <%- include('../partials/footer') %>
</body>

</html>